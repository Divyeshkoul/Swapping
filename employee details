#include <stdio.h>
 
struct employee{
    char    name[30];
    int     PHnumber[15];
    float   salary;
};
 
int main()
{
    
    struct employee emp;
     
    
    printf("\nEnter details :\n");
    printf("Name ?:");          gets(emp.name);
    printf("PHnumber ?:");            scanf("%d",&emp.PHnumber);
    printf("Salary ?:");        scanf("%f",&emp.salary);
     
    
    printf("\nEntered detail is:\n");
    printf("Name: %s\n"   ,emp.name);
    printf("Id: %d\n"     ,emp.PHnumber);
    printf("Salary: %f\n",emp.salary);
    return 0;
}
